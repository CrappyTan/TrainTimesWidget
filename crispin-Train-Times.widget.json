<style>
  div.station {
  	text-align: left; 
  	margin-left: 5px;
  }
  div.heading{
  	/*width:200px;*/
  	border:solid 0px red;
  }
  div.left-column {
  	text-align: right; 
  	margin-left: 5px;
  }
  div.right-column {
		text-align: left;
  	margin-left: 25px;  
  }
  
  div.train-times {
  	/*font-size: 18px;*/
  	white-space: nowrap;
  	overflow: hidden; 
  	text-overflow: ellipsis;
  }

  span.train-status-delayed {
  	/*font-size: 18px;*/
  	white-space: nowrap;
  	color:red;
  	overflow: hidden; 
  	text-overflow: ellipsis;
  }
  span.train-status-OK {
  	/*font-size: 18px;*/
  	white-space: nowrap;
  	color:green;
  	overflow: hidden; 
  	text-overflow: ellipsis;
  }
	hr.train-divider { 
  	border: 0; 
  	height: 1px; 
  	background-image: -webkit-linear-gradient(left, #212124, #666666, #FFFFFF, #666666, #212124);
	}
  
  button.btnRefresh{
  	float:right;
  	margin-right:20px;
		background-color: Transparent;
  	border:solid 0px blue;
  }
</style>
<div class="row station">
    <button  ng-if="(itemValue(item.itemShowRefresh))" type="button" class="btn btn-default btn-lg btnRefresh" title="Refresh" ng-click="sendCmd(config.itemRefresh, 'ON')">
          <i class="glyphicon glyphicon-refresh"></i>
    </button>  
	<div class="col col-sm-5">
    <div class="row heading">
      <span> {{itemValue(config.itemHeading)}}</span>
    </div>
  </div>
</div>
<div class="row" ng-repeat="item in itemsInGroup(config.TrainGroup) | orderBy:'+name'">
  <div class="col col-sm-2 left-column">
    <div class="row event-day">
      <span ng-class="itemValue(item.name + 'Status') != 'ON TIME' ? 'train-status-delayed':'train-status-OK'" >{{itemValue(item.name + "Status")}}</span>
    </div>
  </div>
  <div class="col col-sm-8 right-column">
    <div class="row train-times">
      <span ng-if="(itemValue(item.name + 'Status') != '--' && itemValue(item.name + 'Status') != 'ERROR')" >
        <span ng-if="((config.trainDisplayExpected || config.trainDisplayUntil))">-</span> 
        <span ng-if="(config.trainDisplayExpected)">Departs: {{itemValue(item.name + "TimeExpected")  | date:'HH:mm' }} </span>
        <span ng-if="(config.trainDisplayExpected && config.trainDisplayUntil)">-</span>
        <span ng-if="(config.trainDisplayUntil)">(in {{itemValue(item.name + "Until") }} minutes)</span>
      </span>
      <span ng-if="(itemValue(item.name + 'Status') == 'ERROR')" >
        Unknown error while getting information.
      </span>        
     </div>
  </div> 
<!--  <div>
    <hr class="train-divider">
  </div>
-->
 </div>

